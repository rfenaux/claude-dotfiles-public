{
  "version": "1.0",
  "description": "Health monitoring configuration for Agent Teams",
  "updated": "2026-02-13",
  "stuck_detection": {
    "stuck_threshold_seconds": 300,
    "check_interval_seconds": 30,
    "actions": {
      "nudge": {
        "after_seconds": 300,
        "message": "You appear stuck on your current task. Do you need help or should this task be reassigned?"
      },
      "reassign": {
        "after_seconds": 600,
        "max_retries": 2,
        "message": "Task reassigned due to inactivity."
      }
    }
  },
  "deadlock_detection": {
    "all_idle_threshold_seconds": 120,
    "all_blocked_threshold_seconds": 60,
    "actions": {
      "escalate": {
        "message": "DEADLOCK DETECTED: All teammates idle with tasks still blocked. Escalating to user."
      }
    }
  },
  "failure_recovery": {
    "max_retries_per_task": 2,
    "retry_with_different_agent": true,
    "escalate_on_final_failure": true,
    "cooldown_seconds": 10
  },
  "monitoring": {
    "log_path": "~/.claude/logs/team-health.log",
    "lock_dir": "/tmp",
    "state_dir": "/tmp"
  }
}
